{
  "permissions": {
    "allow": [
      "Bash(npm run check-types:*)",
      "WebFetch(domain:vercel.com)",
      "WebFetch(domain:sdk.vercel.ai)",
      "WebFetch(domain:ai-sdk.dev)",
      "Bash(npm run lint:*)",
      "WebSearch",
      "Bash(grep:*)",
      "Bash(npm run compile:*)",
      "Bash(npm test)",
      "Bash(npm run test:typesafe-api:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eslint:*)"
    ],
    "deny": []
  },
    "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format"
          },
          {
            "type": "command",
            "command": "npm run check-types"
          }
        ]
      }
    ]
  }
}